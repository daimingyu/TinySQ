.broad-item{
  width: 320rpx;
  height: 320rpx;
  display: flex;
  justify-content: center;
  align-content: center;
  background-size: 100% 100%;
  position: relative;
}
.broad-item::after{
  position: absolute;
  top: 0;
  left: 0;
  content: '';
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .5);
  z-index: 0;
}
.broad-item text{
  color: white;
  display: flex;
  align-items: center;
  z-index: 1;
}